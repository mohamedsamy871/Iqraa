@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .content-area { width: 100%; clear: both; background-image: url(/images/bg-image.png); background-size: cover; background-repeat: no-repeat; }
    .card-border { border: 2px solid #ea9e2e; border-radius: 15px; display: inline-block; }
        .card-border h3 { font-weight: 600; }
    .contact_main{
        padding-top:0!important;
    }
</style>
<div class="content-area">
    <div class="container">
        <div class="row p-3">
            <div class="col-sm-6 col-md-4 mt-4 mb-4">
                <a class="card-border" href="@Resource.VideoURL1" target="_blank">
                    <div class="thumbnail">
                        <img src="@Resource.VideoImg1" class='w-100 img-responsive' style="border-radius: 13px;" alt='@Resource.VideoPlaylistName1' title='@Resource.VideoPlaylistName1'>
                        <div class="caption text-center pt-3 pb-3">
                            <h3 class="text-muted">@Resource.VideoPlaylistName1</h3>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

    @section Footer{
        @Html.Partial("~/Views/Shared/Footer.cshtml", (int)ViewBag.visitorsNum)
    }
