@model Iqraa.Models.IqraaNews
@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}
<div class="edit-section-layer position-fixed d-flex justify-content-center align-items-start">
    <div class="wrapper mt-5" style="width:900px">
        <header>
            <h5 class="sec-title d-inline-block">
                <i class='fas fa-box'></i>
                تعديل المحتوي
            </h5>
            <a href="@Url.Action("GetNews","Admin")" class='btn close-lay float-right p-1'>
                <i class='fas fa-times'></i>
            </a>
        </header>
        @using (Html.BeginForm("UpdateNews", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "mt-4", @id = "edit-News" }))
        {
            @Html.AntiForgeryToken()
            <div class="input-group mb-3">
                <div class="input-prepend">
                    العنوان باللغة العربية
                </div>
                @Html.TextBoxFor(m => m.TitleAr, new { @class = "form-control" })
            </div>
            <div class="input-group mb-3">
                <div class="input-prepend">
                    العنوان باللغة الانجليزية
                </div>
                @Html.TextBoxFor(m => m.TitleEn, new { @class = "form-control" })
            </div>
            <div class="input-group mb-3">
                <div class="input-prepend">
                    العنوان باللغة الفرنسية
                </div>
                @Html.TextBoxFor(m => m.TitleFr, new { @class = "form-control" })
            </div>
            <div class="input-group mb-3">
                <div class="input-prepend">
                    العنوان باللغة الأسبانية
                </div>
                @Html.TextBoxFor(m => m.TitleEs, new { @class = "form-control" })
            </div>
            <div class="input-group mb-3">
                <div class="input-prepend">
                    العنوان باللغة الأردية
                </div>
                @Html.TextBoxFor(m => m.TitleUr, new { @class = "form-control" })
            </div>
            <div class="input-group">
                <div class="input-prepend">
                    المحتوي باللفة العربية
                </div>
                @Html.TextAreaFor(m => m.DescAr, new { @class = "form-control ", @id = "Content" })
            </div>
            <div class="input-group">
                <div class="input-prepend">
                    المحتوي باللغة الإنجليزية
                </div>
                @Html.TextAreaFor(m => m.DescEn, new { @class = "form-control" })
            </div>
            <div class="input-group">
                <div class="input-prepend">
                    المحتوي باللغة الفرنسية
                </div>
                @Html.TextAreaFor(m => m.DescFr, new { @class = "form-control" })
            </div>
            <div class="input-group">
                <div class="input-prepend">
                    المحتوي باللغة الأسبانية
                </div>
                @Html.TextAreaFor(m => m.DescEs, new { @class = "form-control" })
            </div>
            <div class="input-group">
                <div class="input-prepend">
                    المحتوي باللغة الأردية
                </div>
                @Html.TextAreaFor(m => m.DescUr, new { @class = "form-control" })
            </div>
            <div class="form-group col-6">
                <label class='d-block'>ادخال صورة</label>
                <div class="upload-file d-inline-block">
                    @*@if (Model.ImagePath != null && Model.ImagePath.Length > 0)
                    {
                    <img src="@Model.ImagePath" width="115" class="d-block mb-1">

                    }*@
                    <label for="upload1" class="d-inline-block p-1">
                        <i class="fas fa-upload"></i> اختر صورة
                    </label>
                    <input id="upload1" hidden="" type="file" name='ImageFile'>
                </div>
            </div>
            @Html.HiddenFor(m => m.Id)
            <div class="form-group text-center mb-0">
                <button class='btn btn-primary' type='submit'>حفظ</button>
                <a href="@Url.Action("GetNews","Admin")" class='btn btn-secondary close-lay' type='button'>الغاء</a>
            </div>
        }
    </div>
</div>
