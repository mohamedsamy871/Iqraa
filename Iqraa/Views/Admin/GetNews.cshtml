@model IEnumerable<Iqraa.Models.IqraaNews>
@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}
<section id="Audio">
    <div class="category-mange">
        <header>
            <div class="row">
                <div class="col-lg-4 mb-3 mb-lg-0">
                    <div class="sec-title">
                        <i class='fab fa-youtube mr-2 ' '></i>
                        الأخبار
                    </div>
                </div>
                <div class="col-lg-8 text-right">
                    <div class="btns-control">
                        <a href="@Url.Action("AddNews","Admin")" class='btn btn-primary' id='new-category' style="border-radius:0"><i class='far fa-folder mr-1'></i>إضافة</a>
                        <button class='btn full'><i class="fas fa-expand"></i></button>
                    </div>
                </div>
            </div>
        </header>
        <div class="table-wrapper position-relative py-2">
            <table class="table my-2">
                <thead>
                    <tr>
                        <th  scope="col">مسلسل</th>
                        <th  scope="col">العنوان</th>
                        <th  scope="col">العنوان</th>
                        <th>العنوان</th>
                        <th>العنوان</th>
                        <th>العنوان</th>
                        <th>المحتوي</th>
                        <th>المحتوي</th>
                        <th>المحتوي</th>
                        <th>المحتوي</th>
                        <th>المحتوي</th>
                        <th>الصورة</th>
                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>
                            <td style="width:auto;">
                                @Html.DisplayFor(m => item.TitleAr)
                            </td>
                            <td style="width:auto;">
                                @Html.DisplayFor(m => item.TitleEn)
                            </td>
                            <td style="width:auto;">
                                @Html.DisplayFor(m => item.TitleFr)
                            </td>
                            <td style="width:auto;">
                                @Html.DisplayFor(m => item.TitleEs)
                            </td>
                            <td style="width:auto;">
                                @Html.DisplayFor(m => item.TitleUr)
                            </td>
                            <td style="width:auto;">
                                @Html.DisplayFor(m => item.DescAr)
                            </td>
                            <td style="width:auto;">
                                @Html.DisplayFor(m => item.DescEn)
                            </td>
                            <td style="width:auto;">
                                @Html.DisplayFor(m => item.DescFr)
                            </td>
                            <td style="width:auto;">
                                @Html.DisplayFor(m => item.DescEs)
                            </td>
                            <td style="width:auto;">
                                @Html.DisplayFor(m => item.DescUr)
                            </td>
                            <td style="width:auto;">

                                @if (item.ImagePath != null)
                                {
                                    <img src='@Url.Content(item.ImagePath)' width=100>
                                }
                                else
                                {
                                    <p>برجاء تحميل صورة</p>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("EditNews","Admin",new { id=item.Id})" class='btn btn-primary edit-category' style="border-radius:0">
                                    <i class='fas fa-edit'></i>
                                </a>
                                <a href="@Url.Action("DeleteNews","Admin",new { id=item.Id})" style="border-radius:0" class='btn btn-danger delete-cat' onclick="DeleteVisionOrder()">
                                    <i class='fas fa-trash'></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

