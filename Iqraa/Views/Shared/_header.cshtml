
<div class="tophead">
    <section>
        @if (HttpContext.Current.Request.Cookies["Language"]!=null)
        {
            <ul class="language-bar header justify-content-center d-flex dir-rtl" style="font-family:'Almarai', sans-serif;" >
                <li class='@(Request.Cookies["Language"].Value == "ar"?"active":" ")'><a class="d-block"  href="@Url.Action("Change","Language",new {LanguageAbbreviation = "ar"})">عربي</a></li>
                <li class='@(Request.Cookies["Language"].Value == "ur"?"active":" ")'><a class="d-block" href="@Url.Action("Change","Language",new {LanguageAbbreviation = "ur"})"> اردو زبان</a></li>
                <li class='@(Request.Cookies["Language"].Value == "es"?"active":" ")'><a class="d-block"  href="@Url.Action("Change","Language",new {LanguageAbbreviation = "es"})">Español</a></li>
                <li class='@(Request.Cookies["Language"].Value == "fr"?"active":" ")'><a class="d-block"  href="@Url.Action("Change","Language",new {LanguageAbbreviation = "fr"})">Français</a></li>
                <li class='@(Request.Cookies["Language"].Value == "en"?"active":" ")'><a class="d-block"  href="@Url.Action("Change","Language",new {LanguageAbbreviation = "en"})">English</a></li>
            </ul>
        }
        else
        {
            HttpCookie Cookie = new HttpCookie("Language");

            Cookie.Value = "ar";
            <ul class="language-bar header justify-content-center d-flex dir-rtl" style="font-family:'Almarai', sans-serif;">
                <li class='@(Cookie.Value == "ar"?"active":" ")'><a class="d-block" href="@Url.Action("Change","Language",new {LanguageAbbreviation = "ar"})">عربي</a></li>
                <li class='@(Cookie.Value == "ur"?"active":" ")'><a class="d-block"  href="@Url.Action("Change","Language",new {LanguageAbbreviation = "ur"})"> اردو زبان</a></li>
                <li class='@(Cookie.Value == "es"?"active":" ")'><a class="d-block"  href="@Url.Action("Change","Language",new {LanguageAbbreviation = "es"})">Español</a></li>
                <li class='@(Cookie.Value == "fr"?"active":" ")'><a class="d-block"  href="@Url.Action("Change","Language",new {LanguageAbbreviation = "fr"})">Français</a></li>
                <li class='@(Cookie.Value == "en"?"active":" ")'><a class="d-block"  href="@Url.Action("Change","Language",new {LanguageAbbreviation = "en"})">English</a></li>
            </ul>
        }
       
    </section>
</div>
